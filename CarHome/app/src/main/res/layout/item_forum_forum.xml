<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_forum_forum_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_forum_forum_bbsName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_forum_title_tv"
            android:padding="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_forum_forum_postdate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_alignTop="@id/item_forum_forum_bbsName_tv"
            android:layout_toRightOf="@id/item_forum_forum_bbsName_tv"
            android:padding="5dp" />

        <TextView
            android:id="@+id/item_forum_forum_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_forum_forum_bbsName_tv"
            android:padding="5dp"
            android:textSize="10sp" />

    </RelativeLayout>
</LinearLayout>