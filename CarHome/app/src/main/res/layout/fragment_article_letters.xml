<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/pinpai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="10dp"
                android:text="全部品牌" />

            <ImageView
                android:id="@+id/article_letters_brand_img"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignTop="@id/pinpai"
                android:layout_toRightOf="@id/pinpai"
                android:background="@mipmap/ahlib_common_main_filter_icon_p" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jibie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="12sp"
                android:text="全部级别" />

            <ImageView
                android:id="@+id/article_letters_rank_img"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignTop="@id/jibie"
                android:layout_toRightOf="@id/jibie"
                android:background="@mipmap/ahlib_common_main_filter_icon_p" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/article_letters_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>