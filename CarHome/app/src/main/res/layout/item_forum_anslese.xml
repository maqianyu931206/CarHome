<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_forum_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/item_forum_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sfsdaf"
            android:textSize="12sp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/item_forum_bbsName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="sadfsda"
            android:textSize="12sp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/item_forum_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_forum_bbsName_tv"
           android:text="sdafasdf"
            android:textSize="10sp"
            android:padding="5dp" />
    </RelativeLayout>
</LinearLayout>