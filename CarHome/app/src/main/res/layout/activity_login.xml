<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_login_back_img"
            android:layout_width="@dimen/height_middle_small"
            android:layout_height="@dimen/height_middle_small"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_small"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/my_login_back_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#5252ea"
            android:layout_toRightOf="@id/my_login_back_img"
            android:padding="@dimen/margin_small"
            android:text="返回"
            android:textSize="@dimen/textsize_big_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:padding="@dimen/margin_small"
            android:text="登录" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="#5252ea"
            android:padding="@dimen/margin_small"
            android:text="注册" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_middle_small"
        android:background="#fff">

            <EditText
            android:id="@+id/my_login_et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/textsize_big_big"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:hint="手机号/邮箱/用户名"
            android:padding="@dimen/margin_middle" />

        <View
            android:id="@+id/viewss"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/my_login_et1"
            android:background="#e7e6e6" />

        <EditText
            android:id="@+id/my_login_etpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_login_et1"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/textsize_big_big"
            android:background="@null"
            android:hint="密码"
            android:padding="10dp"
            android:password="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_middle_big"
        android:layout_margin="@dimen/textsize_big_big"
        android:background="#5252ea"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="@dimen/textsize_big_big_b" />
    </RelativeLayout>

    <TextView
        android:text="忘记密码"
        android:layout_gravity="right"
        android:layout_margin="@dimen/textsize_big_big"
        android:textColor="#5252ea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/height_middle_small"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="#d9d9e4"
            android:layout_gravity="center_vertical"
            android:layout_height="1dp"/>
        <TextView
            android:text="还可以用以下方式登录"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:textSize="@dimen/textsize_big_small"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/view_height_small_middle"
            android:background="#d9d9e4"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_middle"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_middle"
                android:background="@mipmap/qqtouxiang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize_big_small"
                android:gravity="center"
                android:text="QQ登录" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/height_middle_small_s"
                android:layout_height="@dimen/height_middle_small_s"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_middle"
                android:background="@mipmap/weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:text="微博登录"
                android:textSize="@dimen/textsize_big_small" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="@dimen/height_middle_small_s"
                android:layout_height="@dimen/height_middle_small_s"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center"
                android:text="微信登录"
                android:textSize="@dimen/textsize_big_small" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
