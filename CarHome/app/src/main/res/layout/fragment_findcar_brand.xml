<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/finder_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <ListView
        android:id="@+id/finder_brand_CarName_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/float_letter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#F88701"
            android:gravity="center"
            android:textSize="40sp"
            android:visibility="gone" />

        <com.maqianyu.carhome.view.SlideBar
            android:id="@+id/slideBar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom" />

    </FrameLayout>

    <!--抽屉的内容-->
    <LinearLayout
        android:id="@+id/drawer_Ll"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#fff"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:touchscreenBlocksFocus="true">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/finder_brand_rb_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:gravity="right"
                android:text="在售" />

            <RadioButton
                android:id="@+id/finder_brand_rb_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="全部" />
        </RadioGroup>

        <TextView
            android:id="@+id/item_finder_drawer_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/finder_brand_drawer_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
