<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_my_save_img"
        android:layout_width="60dp"
        android:layout_margin="5dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/item_my_save_title"
        android:layout_toRightOf="@id/item_my_save_img"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:text="sdfasdf"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_my_save_price"
        android:layout_toRightOf="@id/item_my_save_img"
        android:layout_width="wrap_content"
        android:text="asdfdsa"
        android:padding="5dp"
        android:layout_below="@id/item_my_save_title"
        android:layout_height="wrap_content" />
</RelativeLayout>